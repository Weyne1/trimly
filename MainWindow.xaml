                StrokeDashArray="10"
                RadiusX="10"
                RadiusY="10" Margin="19,12,18,15" Grid.Row="2" Grid.Column="4">
            </Rectangle>
            <Image VerticalAlignment="Center" Opacity="0.2" Stretch="UniformToFill" HorizontalAlignment="Center" MinHeight="30" MinWidth="30" x:Name="DragAndDropImage" Source="images\drag.png" Height="180" Width="180" Margin="0,-30,0,0"/>
            <MediaElement 
                VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                AllowDrop="true" Drop="VideoDrop" 
                Name="mediaElement" LoadedBehavior="Manual" 
                UnloadedBehavior="Stop" 
                Stretch="Uniform" Margin="6,5,4,3" />
            <Image VerticalAlignment="Center" Opacity="0" Stretch="UniformToFill" HorizontalAlignment="Center" MinHeight="30" MinWidth="30" x:Name="PlayImage" Source="images\play.png" Height="60" Width="60">
                <Image.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1" />
                </Image.RenderTransform>
                <Image.RenderTransformOrigin>
                    <Point X="0.5" Y="0.5" />
                </Image.RenderTransformOrigin>
            </Image>
            <Rectangle
                x:Name="CursorRect"
                AllowDrop="true" 
                Drop="VideoDrop"
                Opacity="0"
                Fill="Transparent" Margin="-2,1,0,-4"
                MouseDown="MediaElement_MouseDown">
            </Rectangle>
        </Grid>


        <!--Панель со слайдером-->
        <Rectangle Margin="5,21,5,1"
                    Stroke="#313131" StrokeThickness="2" RadiusX="5" RadiusY="5" RenderTransformOrigin="0.5,0.5" Grid.Row="3" Grid.Column="4" Grid.RowSpan="2"/>

        <StackPanel Grid.Column="4" Grid.Row="3" Margin="5,21,5,1" Grid.RowSpan="2">
            <Grid Height="60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="140" />
                </Grid.ColumnDefinitions>

                <StackPanel x:Name="FirstMarkerPanel" Orientation="Horizontal" Height="60">
                    <!--<Rectangle Margin="18,0,0,0" Width="3" Height="16" Fill="Red"></Rectangle>-->
                </StackPanel>
                <StackPanel x:Name="SecondMarkerPanel" Orientation="Horizontal" Height="60">
                    <!--<Rectangle Margin="230,0,0,0" Width="3" Height="16" Fill="Red"></Rectangle>-->
                </StackPanel>

                <Slider Margin="12,34,0,0" Style="{DynamicResource SliderStyle1}"
                    PreviewMouseLeftButtonDown="TrimSlider_DragStarted" 
                    PreviewMouseLeftButtonUp="TrimSlider_DragCompleted"
                    ValueChanged="TrimSlider_ValueChanged"
                    x:Name="TrimSlider" VerticalAlignment="Top" Height="18" 
                    SmallChange="1" Maximum="0.1" Grid.Column="0" Value="0">
                </Slider>

                <TextBox VerticalAlignment="Top" Style="{DynamicResource TextBoxStyle1}" x:Name="TrimSliderText" LostFocus="TrimSliderText_LostFocus" 
                    TextChanged="TrimSliderText_TextChanged" HorizontalAlignment="Center" Text="0:00:00:00" 
                    FontFamily="Exo 2 SemiBold" FontSize="17" Foreground="#FFC8C8C8" MaxLines="1" MaxLength="13" Grid.Column="1" Height="24" Width="117"  Margin="0,31,0,0"/>
            </Grid>
            <TextBlock Margin="15,0,0,0" x:Name="DurationText" HorizontalAlignment="Left" Height="24" Width="265" FontFamily="Exo 2 SemiBold" Foreground="#FF909090" 
                FontSize="15"><Run Text="Итоговая длительность: 0:00:00"/>
            </TextBlock>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Margin="30,0,10,10" Style="{DynamicResource ButtonStyle1}" x:Name="ZoomButton" Content="Зум" Click="ZoomButton_Click"
                       Height="30" FontFamily="Exo 2 SemiBold" FontSize="14" Foreground="#FFC8C8C8" IsEnabled="False" Width="100"/>
                <Button Margin="10,0,15,10" Style="{DynamicResource ButtonStyle1}" x:Name="ResetZoomButton" Content="Сброс зума" Click="ResetZoomButton_Click"
                       Height="30" FontFamily="Exo 2 SemiBold" FontSize="14" Foreground="#FFC8C8C8" IsEnabled="False" Width="100"/>
            </StackPanel>

            <TextBlock Margin="0,10,0,0" x:Name="ZoomStatusText" HorizontalAlignment="Stretch" Width="332" Height="26" FontSize="14" FontFamily="Exo 2 SemiBold" Foreground="#50ABFF" TextAlignment="Center" TextTrimming="CharacterEllipsis" ><Run Text="Перетащите видео в окно предпросмотра."/></TextBlock>

        </StackPanel>


        <!--Кнопка рендера и рендер текст-->
        <StackPanel VerticalAlignment="Center" Margin="5,0,5,0" Grid.Column="4" Grid.Row="6" Height="90">
            <TextBlock Margin="0,20,0,0" x:Name="LastRenderedVideoText" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Cursor="Hand" MouseLeftButtonDown="ViewRenderedVideo" Width="203" Height="26" FontSize="14" FontFamily="Exo 2 SemiBold" Foreground="#50ABFF" TextAlignment="Center" TextTrimming="CharacterEllipsis" IsEnabled="False"><Run Text="[100%] - VideoName.mp4"/></TextBlock>
            <Button Margin="30,10,30,10" Style="{DynamicResource ButtonStyle1}" x:Name="RenderButton" Content="Отрендерить" Click="RenderButton_Click" 
                       MaxWidth="200" Height="30" FontFamily="Exo 2 SemiBold" FontSize="15" Foreground="#FFC8C8C8" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
