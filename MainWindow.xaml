                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Height="40">
                        <TextBlock Text="Sample rates:" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2" Grid.Row="5" Width="135" FontSize="14" 
                                   FontFamily="Exo 2 SemiBold" Foreground="#FFC8C8C8" TextAlignment="Right"/>
                        <ComboBox Margin="20,0,0,0" x:Name="SampleRatesComboBox" SelectionChanged="TypeComboBox_SelectionChanged" SelectedIndex="0" FontFamily="Exo 2 SemiBold" FontSize="14" 
                                  Foreground="#FFC8C8C8" Style="{StaticResource CustomComboBoxStyle}" Height="24" Width="94">
                            <ComboBoxItem Content="48.000 Hz"/>
                            <ComboBoxItem Content="44.100 Hz"/>
                            <ComboBoxItem Content="32.000 Hz"/>
                            <ComboBoxItem Content="22.050 Hz"/>
                            <ComboBoxItem Content="16.000 Hz"/>
                            <ComboBoxItem Content="11.025 Hz"/>
                            <ComboBoxItem Content="8.000 Hz"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Height="40">
                        <TextBlock Text="Bitrate:" VerticalAlignment="Center" Grid.Column="2" Grid.Row="5" FontSize="14" 
                               FontFamily="Exo 2 SemiBold" Foreground="#FFC8C8C8" TextAlignment="Right" Width="111"/>
                        <TextBox Style="{DynamicResource TextBoxStyle1}" x:Name="AudioBitrateInput" VerticalAlignment="Center" Text="256" Grid.Column="3" 
                                 Grid.Row="5" Height="22" Width="69" FontFamily="Exo 2 SemiBold" FontSize="15" Foreground="#FFC8C8C8" MaxLines="1" MaxLength="3" 
                                 Margin="20,0,30,0" TextChanged="AudioBitrateInput_TextChanged" LostFocus="AudioBitrateInput_LostFocus" AutomationProperties.HelpText="Битрейт в kbps"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="40">
                <CheckBox VerticalAlignment="Center" Style="{DynamicResource CheckBoxStyle1}" Content="Merge audio tracks" x:Name="MergeAudioTracksCheck" Unchecked="MergeAudioTracksCheck_Checked" Checked="MergeAudioTracksCheck_Checked" IsChecked="true" 
                          Grid.Column="2" Grid.Row="5" FontFamily="Exo 2 SemiBold" FontSize="14" Foreground="#FFC8C8C8" Margin="40,5,0,0" Width="210" />
                <Button Margin="20,0,0,0" Style="{DynamicResource ButtonStyle1}" x:Name="SaveAudioParamsButton" Content="Save" Click="SaveAudioParamsButton_Click"
                        Height="24" FontFamily="Exo 2 SemiBold" FontSize="14" Foreground="#FFC8C8C8" IsEnabled="True" Width="80"/>
                <Button Margin="20,0,30,0" Style="{DynamicResource ButtonStyle1}" x:Name="PasteAudioParamsButton" Content="Paste" Click="PasteAudioParamsButton_Click"
                        Height="24" FontFamily="Exo 2 SemiBold" FontSize="14" Foreground="#FFC8C8C8" IsEnabled="True" Width="80"/>
            </StackPanel>
        </StackPanel>
        <Rectangle x:Name="DecoBorder5" Margin="5,0,5,0"
                Stroke="#545454" StrokeThickness="1" RadiusX="5" RadiusY="5" Grid.Column="4" Grid.Row="2"/>


        <!--Предпросмотр видео-->
        <Grid x:Name="MediaElementGrid" Grid.Column="4" Grid.Row="2" Margin="5,0,5,0">
            <Rectangle
                x:Name="StrokeRectangle"
                Fill="Transparent"
                Stroke="#303030"
                StrokeThickness="1.7"
                StrokeDashArray="10"
                RadiusX="10"
                RadiusY="10" Margin="19,12,18,15" Grid.Row="2" Grid.Column="4"/>
            <Image VerticalAlignment="Center" Opacity="0.2" Stretch="UniformToFill" HorizontalAlignment="Center" MinHeight="30" MinWidth="30" x:Name="DragAndDropImage" Source="images\video.png" Height="180" Width="180" Margin="0,0,0,0"/>
            <MediaElement 
                AllowDrop="true" Drop="VideoDrop" 
                x:Name="mediaElement" LoadedBehavior="Manual" 
                UnloadedBehavior="Stop" 
                Stretch="Uniform" Margin="5,5,5,5"/>
            <Image VerticalAlignment="Center" Opacity="0" Stretch="UniformToFill" HorizontalAlignment="Center" MinHeight="30" MinWidth="30" x:Name="PlayImage" Source="images\play.png" Height="60" Width="60">
                <Image.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1" />
                </Image.RenderTransform>
                <Image.RenderTransformOrigin>
                    <Point X="0.5" Y="0.5" />
                </Image.RenderTransformOrigin>
            </Image>
            <Rectangle
                x:Name="CursorRect"
                AllowDrop="true" 
                Drop="VideoDrop"
                Opacity="0"
                Fill="Transparent" Margin="-2,1,0,-4"
                MouseDown="MediaElement_MouseDown"/>
        </Grid>


        <!--Панель со слайдером-->
        <Rectangle x:Name="DecorBorder4" Margin="5,21,5,1"
                    Stroke="#545454" StrokeThickness="1" RadiusX="5" RadiusY="5" RenderTransformOrigin="0.5,0.5" Grid.Row="3" Grid.Column="4" Grid.RowSpan="2"/>

        <StackPanel x:Name="MediaConrolPanel" Grid.Column="4" Grid.Row="3" Margin="5,21,5,1" Grid.RowSpan="2">
            <Grid Height="60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel x:Name="FirstMarkerPanel" Orientation="Horizontal" Height="60">
                    <!--<Rectangle Margin="18,0,0,0" Width="3" Height="16" Fill="Red"></Rectangle>-->
                </StackPanel>
                <StackPanel x:Name="SecondMarkerPanel" Orientation="Horizontal" Height="60">
                    <!--<Rectangle Margin="230,0,0,0" Width="3" Height="16" Fill="Red"></Rectangle>-->
                </StackPanel>

                <Slider Margin="12,34,18,0" Style="{DynamicResource SliderStyle1}"
                    PreviewMouseLeftButtonDown="TrimSlider_DragStarted" 
                    PreviewMouseLeftButtonUp="TrimSlider_DragCompleted"
                    ValueChanged="TrimSlider_ValueChanged"
                    x:Name="TrimSlider" VerticalAlignment="Top" Height="18" 
                    SmallChange="1" Maximum="0.1" Grid.Column="0" Value="0">
                </Slider>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>

                <TextBox Margin="20,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Style="{DynamicResource TextBoxStyle1}" x:Name="TrimSliderText" LostFocus="TrimSliderText_LostFocus" 
                         TextChanged="TrimSliderText_TextChanged" Text="0:00:00:00" 
                         FontFamily="Exo 2 SemiBold" FontSize="17" Foreground="#FFC8C8C8" MaxLines="1" MaxLength="13" Height="24" Width="117"/>
                <Button Style="{DynamicResource ButtonStyle1}" MinWidth="80" MaxWidth="80" x:Name="ZoomButton" HorizontalAlignment="Center" Content="Zoom" Click="ZoomButton_Click" FontFamily="Exo 2 SemiBold" FontSize="14" Foreground="#FFC8C8C8" IsEnabled="False" Grid.Column="1"/>
                <Button Style="{DynamicResource ButtonStyle1}" MinWidth="80" MaxWidth="80" x:Name="ResetZoomButton" HorizontalAlignment="Center" Content="Reset" Click="ResetZoomButton_Click" FontFamily="Exo 2 SemiBold" FontSize="14" Foreground="#FFC8C8C8" IsEnabled="False" Grid.Column="2" Margin="0,0,15,0"/>
            </Grid>

            <TextBlock Margin="0,15,0,0" x:Name="ZoomStatusText" FontSize="14" FontFamily="Exo 2 SemiBold" Foreground="#E873FF" TextAlignment="Center" TextTrimming="CharacterEllipsis" Text="Drag the video into the preview window." Width="460" />
            <StackPanel Orientation="Horizontal" Height="40">

                <TextBlock VerticalAlignment="Center" Margin="20,0,0,0" x:Name="DurationText" FontFamily="Exo 2 SemiBold" Foreground="#FF909090" 
                           FontSize="15" Text="Total: 0:00:00"/>
                <TextBlock VerticalAlignment="Center" Text=" · 0 Mb" TextAlignment="Left" x:Name="EstimatedSizeText" HorizontalAlignment="Left" FontSize="15" FontFamily="Exo 2 SemiBold" Foreground="#FF909090"/>
            </StackPanel>



        </StackPanel>


        <!--Кнопка рендера и рендер текст-->
        <StackPanel x:Name="MediaStatePanel" Margin="5,0,5,0" Grid.Column="4" VerticalAlignment="Center" Grid.Row="6" Height="120">
            <TextBlock Margin="0,10,0,0" x:Name="LastRenderedVideoText" HorizontalAlignment="Stretch" Cursor="Hand" MouseLeftButtonDown="ViewRenderedVideo" Width="332" FontSize="14" FontFamily="Exo 2 SemiBold" Foreground="#E873FF" TextAlignment="Center" TextTrimming="CharacterEllipsis" IsEnabled="False"><Run Text="[100%] - VideoName.mp4"/></TextBlock>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Height="70">
                <Button Style="{DynamicResource ButtonStyle1}" x:Name="HelpButton" Content="Hotkeys" Click="HelpButton_Click"
                        MinWidth="150" MaxWidth="200" Height="30" FontFamily="Exo 2 SemiBold" FontSize="15" Foreground="#FFC8C8C8"/>
                <Button Margin="20,0,0,0" Style="{DynamicResource ButtonStyle1}" x:Name="RenderButton" Content="Render" Click="RenderButton_Click" 
                        MinWidth="150" MaxWidth="200" Height="30" FontFamily="Exo 2 SemiBold" FontSize="15" Foreground="#FFC8C8C8" IsEnabled="False"/>
            </StackPanel>
            <CheckBox Style="{DynamicResource CheckBoxStyle1}" HorizontalAlignment="Center" Content="Display frames when rewinding" x:Name="PrewievsOnDraggingCheck" IsChecked="true" FontFamily="Exo 2 SemiBold" FontSize="14" Foreground="#FFC8C8C8" />
        </StackPanel>
    </Grid>
</Window>
